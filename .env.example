# Database Settings
DATABASE_URL=mysql://keykeeper_user:keykeeper_password@localhost:3306/keykeeperdb
APP_SECRET=your-secret-key-for-encryption

# Mail Server Settings
CREATE_MAIL_ACCOUNTS=true
DEFAULT_MAIL_QUOTA=1024
USE_MAIN_DB_FOR_MAIL=true

# Mail Database Connection (if not using main database)
MAIL_DB_HOST=localhost
MAIL_DB_USER=vmail
MAIL_DB_PASSWORD=vmail_password
MAIL_DB_NAME=vmail
MAIL_USERS_TABLE=virtual_users
MAIL_DOMAINS_TABLE=virtual_domains

# Mail Server Details
MAIL_HOST=mail.keykeeper.world
MAIL_PASSWORD_SCHEME=SHA512-CRYPT

# SMTP Settings
MAIL_SMTP_PORT=587
MAIL_SMTP_SECURE=false

# IMAP Settings
MAIL_IMAP_PORT=993
MAIL_IMAP_SECURE=true

# Test Account
MAIL_TEST_USER=test@keykeeper.world
MAIL_TEST_PASSWORD=test_password